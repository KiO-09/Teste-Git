int anos, dias, meses,resto;
Console.WriteLine("Digite sua idade em dias:");
dias = Convert.ToInt32(Console.ReadLine());
anos = dias / 365;
resto = dias - (anos * 365);
meses = resto / 30;
dias = resto - (meses * 30);
Console.WriteLine("Sua idade em anos Ã©: " + anos + " em meses: " + meses + " e em dias: " + dias);
